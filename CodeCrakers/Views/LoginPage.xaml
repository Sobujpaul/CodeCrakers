<Window x:Class="CodeCrakers.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
      Title="LoginPage" Height="530" Width="400"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Background="Transparent"
        AllowsTransparency="True">
    <Border CornerRadius="15">
        <Border.Background>
            <ImageBrush ImageSource="/Images/login15.png" Stretch="None"/>
        </Border.Background>
        <Border  CornerRadius="15" 
                  BorderThickness="3"
                 Opacity="0.90">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                    <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.75"/>
                    <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>


            <Border.Background>
                <LinearGradientBrush  StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                    <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0.75"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="8"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock  Text="CodeCrakers"
                                Foreground="White"
                                FontSize="12"
                                FontWeight="Bold"
                                Grid.Column="0"
                                FontFamily="Montserrat"
                                VerticalAlignment="Center"
                                Margin="10,0,0,0"/>
                    <Button x:Name="btnClose"
                            BorderThickness="0"
                            Content="X"
                            Foreground="White"
                            FontFamily="Montserrat"
                            FontSize="12"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="btnClose_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#DA34AE "/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True" >
                                        <Setter Property="Background" Value="#C62DAE"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width = "18" Height = "18"
                                        CornerRadius="9"
                                        Background = "{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>
                </Grid>

                <StackPanel Width="250" 
                            Grid.Row="2"
                            Orientation="Vertical"
                            Margin="0,35,0,0">
                    <Image Source="/Images/logo1.png" 
                             Width="100" Height="70" 
                             HorizontalAlignment="Center"/>
                    <TextBlock Text="CodeCrakers"
                               Foreground="White"
                               FontSize="25"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Username"
                               Foreground="DarkGray"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="0,35,0,0"/>

                    <TextBox Name="TextUser"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,1"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0,8,0,0"
                             Padding="20,0,0,0">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Images/user-icon.png" 
                                        Stretch="None"
                                        AlignmentX="Left"/>
                        </TextBox.Background>

                    </TextBox>

                    <TextBlock Text="Password"
                               Foreground="DarkGray"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="0,15,0,0"/>

                    <Grid Margin="0,8,0,0">
                        <!-- PasswordBox -->
                        <PasswordBox x:Name="txtPass"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           FontFamily="Montserrat"
                                           Foreground="White"
                                           CaretBrush="LightGray"
                                           BorderBrush="DarkGray"
                                           BorderThickness="0,0,0,1"
                                           Height="28"
                                           VerticalContentAlignment="Center"
                                           Padding="20,0,30,0"
                                         Visibility="Visible">
                            <PasswordBox.Background>
                                <ImageBrush ImageSource="/Images/key-icon.png" 
                                                       Stretch="None"
                                                        AlignmentX="Left"/>
                            </PasswordBox.Background>
                        </PasswordBox>

                        <!-- TextBox for showing password -->
                        <TextBox x:Name="txtPassVisible"
                                 FontSize="13"
                                 FontWeight="Medium"
                                 FontFamily="Montserrat"
                                 Foreground="White"
                                  BorderBrush="DarkGray"
                                  BorderThickness="0,0,0,1"
                                  Height="28"
                                   VerticalContentAlignment="Center"
                                   Padding="20,0,30,0"
                                   Background="Transparent"
                                    Visibility="Collapsed"/>

                        <!-- Eye Button -->
                        <Button x:Name="btnTogglePassword"
                                  Width="25"
                                  Height="25"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Right"
                                  Margin="0,0,2,0"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Click="btnTogglePassword_Click">
                            <fa:IconBlock x:Name="iconEye"
                                          Icon="Eye"
                                          Foreground="LightBlue"
                                          Width="18"
                                          Height="18"/>

                        </Button>
                    </Grid>


                    <Button x:Name="btnlogin"
                            BorderThickness="0"
                            Content="LOG IN"
                            Foreground="White"
                            FontFamily="Montserrat"
                            FontSize="12"
                            Cursor="Hand"
                            Grid.Column="2"
                            Margin="0,45,0,0"
                            Click="btnlogin_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#462AD8"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True" >
                                        <Setter Property="Background" Value="#28AEED"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width = "150" Height = "30"
                                        CornerRadius="15"
                                        Background = "{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>
                    <TextBlock Text="Forgot Password?"
                                Foreground="DarkGray"
                                FontSize="12"
                                FontWeight="Medium"
                                FontFamily="Montserrat"
                                Margin="0,15,0,0"
                               TextAlignment="Center"
                               Cursor="Hand"
                               TextDecorations="Underline"/>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,15,0,0">
                        <TextBlock Text="Don't have an account?"
                                    Foreground="DarkGray"
                                    FontSize="12"
                                    FontWeight="Medium"
                                    FontFamily="Montserrt"
                                    TextAlignment="Center"
                                    Margin="40,0,0,0"/>

                        <TextBlock Text="Sign up"
                                   Foreground="DarkGray"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   FontFamily="Montserrat"
                                   Margin="10,0,0,0"
                                   Cursor="Hand"
                                   TextDecorations="Underline"
                                   MouseDown="SignUpTextBlock_MouseDown"/>

                    </StackPanel>
                </StackPanel>

            </Grid>
        </Border>
    </Border>
</Window>
