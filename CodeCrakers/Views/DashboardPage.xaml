<UserControl x:Class="CodeCrakers.Views.DashboardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                CornerRadius="0,10,0,0"
                Background="{StaticResource panelColor}">
            <StackPanel Orientation="Horizontal" 
                        VerticalAlignment="Center" 
                        Margin="20,0">
                <fa:IconImage Icon="Home" 
                              Style="{StaticResource menuButtonIcon}"
                              Margin="0,0,10,0"/>
                <TextBlock Text="Dashboard" 
                           Foreground="{StaticResource titleColor1}"
                           FontFamily="Montserrat"
                           FontSize="24"
                           FontWeight="Medium"/>
            </StackPanel>
        </Border>
        
        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="20">
            <StackPanel>
                
                <!-- Welcome Section -->
                <Border CornerRadius="10" 
                        Background="{StaticResource panelColor}"
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Welcome back!" 
                                   Foreground="{StaticResource titleColor1}"
                                   FontFamily="Montserrat"
                                   FontSize="20"
                                   FontWeight="Medium"/>
                        <TextBlock Text="Track your competitive programming progress across all platforms" 
                                   Foreground="{StaticResource plainTextColor1}"
                                   FontFamily="Montserrat"
                                   FontSize="14"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Platform Status Cards -->
                <TextBlock Text="Platform Status" 
                           Foreground="{StaticResource titleColor2}"
                           FontFamily="Montserrat"
                           FontSize="18"
                           FontWeight="Medium"
                           Margin="0,0,0,15"/>
                
                <!-- Static Platform Status Container -->
                <WrapPanel x:Name="PlatformStatusContainer" Orientation="Horizontal">
                    <!-- Codeforces Platform Box -->
                    <Border x:Name="CodeforcesBox" 
                            CornerRadius="10" 
                            Background="{StaticResource panelColor}"
                            Padding="15"
                            Width="220"
                            MinHeight="120"
                            Margin="0,0,10,10"
                            Cursor="Hand"
                            MouseLeftButtonDown="PlatformBox_MouseLeftButtonDown"
                            Tag="Codeforces">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <fa:IconImage Icon="Code" 
                                              Foreground="{StaticResource codeforcesColor}"
                                              Width="20" Height="20"
                                              Margin="0,0,8,0"/>
                                <TextBlock Text="Codeforces" 
                                           Foreground="{StaticResource titleColor1}"
                                           FontFamily="Montserrat"
                                           FontSize="14"
                                           FontWeight="Medium"/>
                            </StackPanel>
                            <TextBlock x:Name="txtCFUsername" 
                                       Text="Not Connected" 
                                       Foreground="{StaticResource plainTextColor1}"
                                       FontFamily="Montserrat"
                                       FontSize="12"
                                       Margin="0,0,0,3"/>
                            <TextBlock x:Name="txtCFStatus" 
                                       Text="Click to Connect" 
                                       Foreground="{StaticResource plainTextColor2}"
                                       FontFamily="Montserrat"
                                       FontSize="10"
                                       Margin="0,0,0,3"/>
                            <TextBlock x:Name="txtCFRating" 
                                       Text="" 
                                       Foreground="{StaticResource codeforcesColor}"
                                       FontFamily="Montserrat"
                                       FontSize="11"
                                       FontWeight="Medium"
                                       Margin="0,0,0,2"/>
                            <TextBlock x:Name="txtCFProblems" 
                                       Text="" 
                                       Foreground="{StaticResource plainTextColor2}"
                                       FontFamily="Montserrat"
                                       FontSize="10"/>
                        </StackPanel>
                    </Border>

                    <!-- LeetCode Platform Box -->
                    <Border x:Name="LeetCodeBox" 
                            CornerRadius="10" 
                            Background="{StaticResource panelColor}"
                            Padding="15"
                            Width="220"
                            MinHeight="120"
                            Margin="0,0,10,10"
                            Cursor="Hand"
                            MouseLeftButtonDown="PlatformBox_MouseLeftButtonDown"
                            Tag="LeetCode">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <fa:IconImage Icon="Code" 
                                              Foreground="{StaticResource leetcodeColor}"
                                              Width="20" Height="20"
                                              Margin="0,0,8,0"/>
                                <TextBlock Text="LeetCode" 
                                           Foreground="{StaticResource titleColor1}"
                                           FontFamily="Montserrat"
                                           FontSize="14"
                                           FontWeight="Medium"/>
                            </StackPanel>
                            <TextBlock x:Name="txtLCUsername" 
                                       Text="Not Connected" 
                                       Foreground="{StaticResource plainTextColor1}"
                                       FontFamily="Montserrat"
                                       FontSize="12"
                                       Margin="0,0,0,3"/>
                            <TextBlock x:Name="txtLCStatus" 
                                       Text="Click to Connect" 
                                       Foreground="{StaticResource plainTextColor2}"
                                       FontFamily="Montserrat"
                                       FontSize="10"
                                       Margin="0,0,0,3"/>
                            <TextBlock x:Name="txtLCProblems" 
                                       Text="" 
                                       Foreground="{StaticResource leetcodeColor}"
                                       FontFamily="Montserrat"
                                       FontSize="11"
                                       FontWeight="Medium"
                                       Margin="0,0,0,2"/>
                            <TextBlock x:Name="txtLCContests" 
                                       Text="" 
                                       Foreground="{StaticResource plainTextColor2}"
                                       FontFamily="Montserrat"
                                       FontSize="10"/>
                        </StackPanel>
                    </Border>

                    <!-- CodeChef Platform Box -->
                    <Border x:Name="CodeChefBox" 
                            CornerRadius="10" 
                            Background="{StaticResource panelColor}"
                            Padding="15"
                            Width="220"
                            MinHeight="120"
                            Margin="0,0,10,10"
                            Cursor="Hand"
                            MouseLeftButtonDown="PlatformBox_MouseLeftButtonDown"
                            Tag="CodeChef">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <fa:IconImage Icon="Code" 
                                              Foreground="{StaticResource codechefColor}"
                                              Width="20" Height="20"
                                              Margin="0,0,8,0"/>
                                <TextBlock Text="CodeChef" 
                                           Foreground="{StaticResource titleColor1}"
                                           FontFamily="Montserrat"
                                           FontSize="14"
                                           FontWeight="Medium"/>
                            </StackPanel>
                            <TextBlock x:Name="txtCCUsername" 
                                       Text="Not Connected" 
                                       Foreground="{StaticResource plainTextColor1}"
                                       FontFamily="Montserrat"
                                       FontSize="12"
                                       Margin="0,0,0,3"/>
                            <TextBlock x:Name="txtCCStatus" 
                                       Text="Click to Connect" 
                                       Foreground="{StaticResource plainTextColor2}"
                                       FontFamily="Montserrat"
                                       FontSize="10"
                                       Margin="0,0,0,3"/>
                            <TextBlock x:Name="txtCCRating" 
                                       Text="" 
                                       Foreground="{StaticResource codechefColor}"
                                       FontFamily="Montserrat"
                                       FontSize="11"
                                       FontWeight="Medium"
                                       Margin="0,0,0,2"/>
                            <TextBlock x:Name="txtCCProblems" 
                                       Text="" 
                                       Foreground="{StaticResource plainTextColor2}"
                                       FontFamily="Montserrat"
                                       FontSize="10"/>
                        </StackPanel>
                    </Border>

                    <!-- AtCoder Platform Box -->
                    <Border x:Name="AtCoderBox" 
                            CornerRadius="10" 
                            Background="{StaticResource panelColor}"
                            Padding="15"
                            Width="220"
                            MinHeight="120"
                            Margin="0,0,10,10"
                            Cursor="Hand"
                            MouseLeftButtonDown="PlatformBox_MouseLeftButtonDown"
                            Tag="AtCoder">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <fa:IconImage Icon="Code" 
                                              Foreground="{StaticResource atcoderColor}"
                                              Width="20" Height="20"
                                              Margin="0,0,8,0"/>
                                <TextBlock Text="AtCoder" 
                                           Foreground="{StaticResource titleColor1}"
                                           FontFamily="Montserrat"
                                           FontSize="14"
                                           FontWeight="Medium"/>
                            </StackPanel>
                            <TextBlock x:Name="txtACUsername" 
                                       Text="Not Connected" 
                                       Foreground="{StaticResource plainTextColor1}"
                                       FontFamily="Montserrat"
                                       FontSize="12"
                                       Margin="0,0,0,3"/>
                            <TextBlock x:Name="txtACStatus" 
                                       Text="Click to Connect" 
                                       Foreground="{StaticResource plainTextColor2}"
                                       FontFamily="Montserrat"
                                       FontSize="10"
                                       Margin="0,0,0,3"/>
                            <TextBlock x:Name="txtACRating" 
                                       Text="" 
                                       Foreground="{StaticResource atcoderColor}"
                                       FontFamily="Montserrat"
                                       FontSize="11"
                                       FontWeight="Medium"
                                       Margin="0,0,0,2"/>
                            <TextBlock x:Name="txtACProblems" 
                                       Text="" 
                                       Foreground="{StaticResource plainTextColor2}"
                                       FontFamily="Montserrat"
                                       FontSize="10"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>
                
                <!-- Platform Details Section -->
                <Border x:Name="PlatformDetailsSection" 
                        CornerRadius="10" 
                        Background="{StaticResource panelColor}"
                        Padding="20"
                        Margin="0,20,0,0"
                        Visibility="Collapsed">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Platform Header -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <fa:IconImage x:Name="PlatformDetailsIcon" 
                                          Icon="Code" 
                                          Width="24" Height="24"
                                          Margin="0,0,10,0"/>
                            <TextBlock x:Name="PlatformDetailsTitle" 
                                       Text="Platform Details" 
                                       Foreground="{StaticResource titleColor1}"
                                       FontFamily="Montserrat"
                                       FontSize="18"
                                       FontWeight="Medium"/>
                        </StackPanel>
                        
                        <!-- Platform Information -->
                        <Grid Grid.Row="1" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Left Column -->
                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <TextBlock Text="Username" 
                                           Foreground="{StaticResource plainTextColor2}"
                                           FontFamily="Montserrat"
                                           FontSize="12"
                                           Margin="0,0,0,5"/>
                                <TextBlock x:Name="PlatformDetailsUsername" 
                                           Text="-" 
                                           Foreground="{StaticResource titleColor1}"
                                           FontFamily="Montserrat"
                                           FontSize="14"
                                           FontWeight="Medium"
                                           Margin="0,0,0,15"/>
                                
                                <TextBlock Text="Rating" 
                                           Foreground="{StaticResource plainTextColor2}"
                                           FontFamily="Montserrat"
                                           FontSize="12"
                                           Margin="0,0,0,5"/>
                                <TextBlock x:Name="PlatformDetailsRating" 
                                           Text="-" 
                                           Foreground="{StaticResource titleColor1}"
                                           FontFamily="Montserrat"
                                           FontSize="14"
                                           FontWeight="Medium"/>
                            </StackPanel>
                            
                            <!-- Middle Column -->
                            <StackPanel Grid.Column="1" Margin="0,0,20,0">
                                <TextBlock Text="Problems Solved" 
                                           Foreground="{StaticResource plainTextColor2}"
                                           FontFamily="Montserrat"
                                           FontSize="12"
                                           Margin="0,0,0,5"/>
                                <TextBlock x:Name="PlatformDetailsProblems" 
                                           Text="-" 
                                           Foreground="{StaticResource titleColor1}"
                                           FontFamily="Montserrat"
                                           FontSize="14"
                                           FontWeight="Medium"
                                           Margin="0,0,0,15"/>
                                
                                <TextBlock Text="Contests" 
                                           Foreground="{StaticResource plainTextColor2}"
                                           FontFamily="Montserrat"
                                           FontSize="12"
                                           Margin="0,0,0,5"/>
                                <TextBlock x:Name="PlatformDetailsContests" 
                                           Text="-" 
                                           Foreground="{StaticResource titleColor1}"
                                           FontFamily="Montserrat"
                                           FontSize="14"
                                           FontWeight="Medium"/>
                            </StackPanel>
                            
                            <!-- Right Column -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Max Rating" 
                                           Foreground="{StaticResource plainTextColor2}"
                                           FontFamily="Montserrat"
                                           FontSize="12"
                                           Margin="0,0,0,5"/>
                                <TextBlock x:Name="PlatformDetailsMaxRating" 
                                           Text="-" 
                                           Foreground="{StaticResource titleColor1}"
                                           FontFamily="Montserrat"
                                           FontSize="14"
                                           FontWeight="Medium"
                                           Margin="0,0,0,15"/>
                                
                                <TextBlock Text="Rank" 
                                           Foreground="{StaticResource plainTextColor2}"
                                           FontFamily="Montserrat"
                                           FontSize="12"
                                           Margin="0,0,0,5"/>
                                <TextBlock x:Name="PlatformDetailsRank" 
                                           Text="-" 
                                           Foreground="{StaticResource titleColor1}"
                                           FontFamily="Montserrat"
                                           FontSize="14"
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Action Buttons -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="PlatformDetailsVisitButton" 
                                    Content="Visit Platform" 
                                    Background="{StaticResource color1}"
                                    Foreground="White"
                                    FontFamily="Montserrat"
                                    FontSize="12"
                                    FontWeight="Medium"
                                    Padding="15,8"
                                    BorderThickness="0"
                                    Margin="0,0,10,0"
                                    Click="PlatformDetailsVisitButton_Click"/>
                            <Button x:Name="PlatformDetailsCloseButton" 
                                    Content="Close" 
                                    Background="{StaticResource panelOverColor}"
                                    Foreground="{StaticResource titleColor1}"
                                    FontFamily="Montserrat"
                                    FontSize="12"
                                    FontWeight="Medium"
                                    Padding="15,8"
                                    BorderThickness="0"
                                    Click="PlatformDetailsCloseButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- No Platforms Connected Message -->
                <Border x:Name="NoPlatformsMessage" 
                        CornerRadius="10" 
                        Background="{StaticResource panelColor}"
                        Padding="30"
                        Margin="0,20,0,0"
                        Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center">
                        <fa:IconImage Icon="ExclamationTriangle" 
                                      Foreground="{StaticResource plainTextColor1}"
                                      Width="48" Height="48"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,15"/>
                        <TextBlock Text="No Platforms Connected" 
                                   Foreground="{StaticResource titleColor1}"
                                   FontFamily="Montserrat"
                                   FontSize="18"
                                   FontWeight="Medium"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="Connect your coding platforms to start tracking your progress!" 
                                   Foreground="{StaticResource plainTextColor1}"
                                   FontFamily="Montserrat"
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Quick Stats -->
                <TextBlock Text="Quick Stats" 
                           Foreground="{StaticResource titleColor2}"
                           FontFamily="Montserrat"
                           FontSize="18"
                           FontWeight="Medium"
                           Margin="0,30,0,15"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Problems Solved This Week -->
                    <Border Grid.Column="0" 
                            CornerRadius="10" 
                            Background="{StaticResource panelColor}"
                            Padding="20">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" 
                                        Margin="0,0,0,10">
                                <fa:IconImage Icon="CheckCircle" 
                                              Foreground="{StaticResource color4}"
                                              Width="24" Height="24"
                                              Margin="0,0,10,0"/>
                                <TextBlock Text="Problems Solved" 
                                           Foreground="{StaticResource titleColor1}"
                                           FontFamily="Montserrat"
                                           FontSize="16"
                                           FontWeight="Medium"/>
                            </StackPanel>
                            <TextBlock x:Name="txtProblemsThisWeek" 
                                       Text="0" 
                                       Foreground="{StaticResource color4}"
                                       FontFamily="Montserrat"
                                       FontSize="32"
                                       FontWeight="Bold"/>
                            <TextBlock Text="This Week" 
                                       Foreground="{StaticResource plainTextColor1}"
                                       FontFamily="Montserrat"
                                       FontSize="12"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Total Contests -->
                    <Border Grid.Column="2" 
                            CornerRadius="10" 
                            Background="{StaticResource panelColor}"
                            Padding="20">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" 
                                        Margin="0,0,0,10">
                                <fa:IconImage Icon="Trophy" 
                                              Foreground="{StaticResource color5}"
                                              Width="24" Height="24"
                                              Margin="0,0,10,0"/>
                                <TextBlock Text="Contests" 
                                           Foreground="{StaticResource titleColor1}"
                                           FontFamily="Montserrat"
                                           FontSize="16"
                                           FontWeight="Medium"/>
                            </StackPanel>
                            <TextBlock x:Name="txtContestsThisWeek" 
                                       Text="0" 
                                       Foreground="{StaticResource color5}"
                                       FontFamily="Montserrat"
                                       FontSize="32"
                                       FontWeight="Bold"/>
                            <TextBlock Text="This Week" 
                                       Foreground="{StaticResource plainTextColor1}"
                                       FontFamily="Montserrat"
                                       FontSize="12"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Total Problems Solved -->
                    <Border Grid.Column="4" 
                            CornerRadius="10" 
                            Background="{StaticResource panelColor}"
                            Padding="20">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" 
                                        Margin="0,0,0,10">
                                <fa:IconImage Icon="Star" 
                                              Foreground="{StaticResource color6}"
                                              Width="24" Height="24"
                                              Margin="0,0,10,0"/>
                                <TextBlock Text="Total Problems" 
                                           Foreground="{StaticResource titleColor1}"
                                           FontFamily="Montserrat"
                                           FontSize="16"
                                           FontWeight="Medium"/>
                            </StackPanel>
                            <TextBlock x:Name="txtTotalProblems" 
                                       Text="0" 
                                       Foreground="{StaticResource color6}"
                                       FontFamily="Montserrat"
                                       FontSize="32"
                                       FontWeight="Bold"/>
                            <TextBlock Text="All Time" 
                                       Foreground="{StaticResource plainTextColor1}"
                                       FontFamily="Montserrat"
                                       FontSize="12"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Detailed Platform Statistics -->
                <TextBlock Text="Platform Details" 
                           Foreground="{StaticResource titleColor2}"
                           FontFamily="Montserrat"
                           FontSize="18"
                           FontWeight="Medium"
                           Margin="0,30,0,15"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Codeforces Details -->
                    <Border Grid.Column="0" 
                            CornerRadius="10" 
                            Background="{StaticResource panelColor}"
                            Padding="20">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" 
                                        Margin="0,0,0,15">
                                <fa:IconImage Icon="Code" 
                                              Foreground="{StaticResource color1}"
                                              Width="20" Height="20"
                                              Margin="0,0,10,0"/>
                                <TextBlock Text="Codeforces" 
                                           Foreground="{StaticResource titleColor1}"
                                           FontFamily="Montserrat"
                                           FontSize="16"
                                           FontWeight="Medium"/>
                            </StackPanel>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Current Rating:" 
                                           Foreground="{StaticResource plainTextColor1}" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtCFCurrentRating" Text="-" 
                                           Foreground="{StaticResource color1}" FontSize="12" FontWeight="Medium" Margin="0,0,0,5"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Max Rating:" 
                                           Foreground="{StaticResource plainTextColor1}" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtCFMaxRating" Text="-" 
                                           Foreground="{StaticResource color1}" FontSize="12" FontWeight="Medium" Margin="0,0,0,5"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Problems Solved:" 
                                           Foreground="{StaticResource plainTextColor1}" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtCFProblemsSolved" Text="-" 
                                           Foreground="{StaticResource color1}" FontSize="12" FontWeight="Medium" Margin="0,0,0,5"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Contests:" 
                                           Foreground="{StaticResource plainTextColor1}" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtCFContests" Text="-" 
                                           Foreground="{StaticResource color1}" FontSize="12" FontWeight="Medium" Margin="0,0,0,5"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- LeetCode Details -->
                    <Border Grid.Column="2" 
                            CornerRadius="10" 
                            Background="{StaticResource panelColor}"
                            Padding="20">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" 
                                        Margin="0,0,0,15">
                                <fa:IconImage Icon="Code" 
                                              Foreground="{StaticResource color2}"
                                              Width="20" Height="20"
                                              Margin="0,0,10,0"/>
                                <TextBlock Text="LeetCode" 
                                           Foreground="{StaticResource titleColor1}"
                                           FontFamily="Montserrat"
                                           FontSize="16"
                                           FontWeight="Medium"/>
                            </StackPanel>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Reputation:" 
                                           Foreground="{StaticResource plainTextColor1}" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtLCReputation" Text="-" 
                                           Foreground="{StaticResource color2}" FontSize="12" FontWeight="Medium" Margin="0,0,0,5"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Problems Solved:" 
                                           Foreground="{StaticResource plainTextColor1}" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtLCProblemsSolved" Text="-" 
                                           Foreground="{StaticResource color2}" FontSize="12" FontWeight="Medium" Margin="0,0,0,5"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Easy:" 
                                           Foreground="{StaticResource plainTextColor1}" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtLCEasy" Text="-" 
                                           Foreground="{StaticResource color2}" FontSize="12" FontWeight="Medium" Margin="0,0,0,5"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Medium:" 
                                           Foreground="{StaticResource plainTextColor1}" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtLCMedium" Text="-" 
                                           Foreground="{StaticResource color2}" FontSize="12" FontWeight="Medium" Margin="0,0,0,5"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Performance Overview -->
                <TextBlock Text="Performance Overview" 
                           Foreground="{StaticResource titleColor2}"
                           FontFamily="Montserrat"
                           FontSize="18"
                           FontWeight="Medium"
                           Margin="0,30,0,15"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Weekly Progress -->
                    <Border Grid.Column="0" 
                            CornerRadius="10" 
                            Background="{StaticResource panelColor}"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Weekly Progress" 
                                       Foreground="{StaticResource titleColor1}"
                                       FontFamily="Montserrat"
                                       FontSize="16"
                                       FontWeight="Medium"
                                       Margin="0,0,0,15"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Problems:" 
                                           Foreground="{StaticResource plainTextColor1}" FontSize="12" Width="80"/>
                                <TextBlock x:Name="txtWeeklyProblems" Text="0" 
                                           Foreground="{StaticResource color4}" FontSize="12" FontWeight="Medium"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Contests:" 
                                           Foreground="{StaticResource plainTextColor1}" FontSize="12" Width="80"/>
                                <TextBlock x:Name="txtWeeklyContests" Text="0" 
                                           Foreground="{StaticResource color5}" FontSize="12" FontWeight="Medium"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Rating Change:" 
                                           Foreground="{StaticResource plainTextColor1}" FontSize="12" Width="80"/>
                                <TextBlock x:Name="txtWeeklyRatingChange" Text="+0" 
                                           Foreground="{StaticResource color6}" FontSize="12" FontWeight="Medium"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Achievement Badges -->
                    <Border Grid.Column="2" 
                            CornerRadius="10" 
                            Background="{StaticResource panelColor}"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Achievements" 
                                       Foreground="{StaticResource titleColor1}"
                                       FontFamily="Montserrat"
                                       FontSize="16"
                                       FontWeight="Medium"
                                       Margin="0,0,0,15"/>
                            
                            <StackPanel x:Name="pnlAchievements">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <fa:IconImage Icon="Trophy" 
                                                  Foreground="{StaticResource color6}"
                                                  Width="16" Height="16"
                                                  Margin="0,0,8,0"/>
                                    <TextBlock Text="First Problem Solved" 
                                               Foreground="{StaticResource plainTextColor1}" FontSize="12"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <fa:IconImage Icon="Fire" 
                                                  Foreground="{StaticResource color4}"
                                                  Width="16" Height="16"
                                                  Margin="0,0,8,0"/>
                                    <TextBlock Text="Streak Master" 
                                               Foreground="{StaticResource plainTextColor1}" FontSize="12"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <fa:IconImage Icon="Crown" 
                                                  Foreground="{StaticResource color5}"
                                                  Width="16" Height="16"
                                                  Margin="0,0,8,0"/>
                                    <TextBlock Text="Contest Champion" 
                                               Foreground="{StaticResource plainTextColor1}" FontSize="12"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Recent Activity -->
                <TextBlock Text="Recent Activity" 
                           Foreground="{StaticResource titleColor2}"
                           FontFamily="Montserrat"
                           FontSize="18"
                           FontWeight="Medium"
                           Margin="0,30,0,15"/>
                
                <Border CornerRadius="10" 
                        Background="{StaticResource panelColor}"
                        Padding="20">
                    <StackPanel>
                        <TextBlock x:Name="txtRecentActivity" 
                                   Text="No recent activity. Connect your platforms to start tracking!" 
                                   Foreground="{StaticResource plainTextColor1}"
                                   FontFamily="Montserrat"
                                   FontSize="14"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
