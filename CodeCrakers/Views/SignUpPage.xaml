<Window x:Class="CodeCrakers.Views.SignUpPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
        Title="SignUpPage" Height="550" Width="400"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Background="Transparent"
        AllowsTransparency="True">

    <Border CornerRadius="15">
        <Border.Background>
            <ImageBrush ImageSource="/Images/login15.png" Stretch="None"/>
        </Border.Background>

        <Border CornerRadius="15" BorderThickness="3" Opacity="0.90">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                    <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.75"/>
                    <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                    <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0.75"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="8"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Sign Up" Foreground="White"
                               FontSize="12" FontWeight="Bold"
                               Grid.Column="0" FontFamily="Montserrat"
                               VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <Button x:Name="btnClose" BorderThickness="0" Content="X"
                            Foreground="White" FontFamily="Montserrat" FontSize="12"
                            Cursor="Hand" Grid.Column="2"
                            Click="btnClose_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#DA34AE "/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C62DAE"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <StackPanel Width="250" Grid.Row="2" Orientation="Vertical" Margin="0,35,0,0">
                    <Image Source="/Images/logo1.png" Width="100" Height="70" HorizontalAlignment="Center"/>
                    <TextBlock Text="CodeCrakers" Foreground="White" FontSize="25"
                               FontWeight="Medium" FontFamily="Montserrat"
                               HorizontalAlignment="Center"/>

                    <!-- Username Field -->
                    <TextBlock Text="Username" Foreground="DarkGray" FontSize="12"
                               FontWeight="Medium" FontFamily="Montserrat" Margin="0,20,0,0"/>
                    <TextBox x:Name="txtUsername" FontSize="13" FontWeight="Medium"
                             FontFamily="Montserrat" Foreground="White" CaretBrush="LightGray"
                             BorderBrush="DarkGray" BorderThickness="0,0,0,1" Height="28"
                             VerticalContentAlignment="Center" Margin="0,8,0,0" Padding="20,0,0,0">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Images/user-icon.png"
                                        Stretch="None" AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>

                    <TextBlock Text="Email"
                               Foreground="DarkGray"
                               FontSize="12"
                               FontWeight="Medium"
                                FontFamily="Montserrat"
                                Margin="0,15,0,0"/>
                        <Grid Margin="0,8,0,0">
                            <!-- FontAwesome Email Icon -->
                            <fa:IconBlock Icon="Envelope" Foreground="LightGray"
                                          Width="18" Height="18"
                                          VerticalAlignment="Center" HorizontalAlignment="Left"
                                          Margin="2,0,0,0"/>

                        <!-- TextBox -->
                        <TextBox x:Name="txtEmail" FontSize="13" FontWeight="Medium"
                                 FontFamily="Montserrat" Foreground="White" CaretBrush="LightGray"
                                 BorderBrush="DarkGray" BorderThickness="0,0,0,1" Height="28"
                                 VerticalContentAlignment="Center" Margin="0,0,0,0"
                                 Padding="25,0,0,0" Background="Transparent"/>
                    </Grid>


                    <!-- Password Field -->
                    <TextBlock Text="Password" Foreground="DarkGray" FontSize="12"
                               FontWeight="Medium" FontFamily="Montserrat" Margin="0,15,0,0"/>
                    <Grid Margin="0,8,0,0">
                        <PasswordBox x:Name="txtPassword" FontSize="13" FontWeight="Medium"
                                     FontFamily="Montserrat" Foreground="White" CaretBrush="LightGray"
                                     BorderBrush="DarkGray" BorderThickness="0,0,0,1"
                                     Height="28" VerticalContentAlignment="Center" Padding="20,0,30,0"
                                     Visibility="Visible">
                            <PasswordBox.Background>
                                <ImageBrush ImageSource="/Images/key-icon.png"
                                            Stretch="None" AlignmentX="Left"/>
                            </PasswordBox.Background>
                        </PasswordBox>

                        <TextBox x:Name="txtPasswordVisible" FontSize="13" FontWeight="Medium"
                                 FontFamily="Montserrat" Foreground="White" BorderBrush="DarkGray"
                                 BorderThickness="0,0,0,1" Height="28" VerticalContentAlignment="Center"
                                 Padding="20,0,30,0" Background="Transparent" Visibility="Collapsed"/>

                        <Button x:Name="btnTogglePassword" Width="25" Height="25"
                                VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,2,0"
                                Background="Transparent" BorderThickness="0" Click="btnTogglePassword_Click">
                            <fa:IconBlock x:Name="iconEye" Icon="Eye" Foreground="LightBlue" Width="18" Height="18"/>
                        </Button>
                    </Grid>

                    <!-- Sign Up Button -->
                    <Button x:Name="btnSignUp" BorderThickness="0" Content="SIGN UP" Foreground="White"
                            FontFamily="Montserrat" FontSize="12" Cursor="Hand" Margin="0,35,0,0"
                            Click="btnSignUp_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#462AD8"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#28AEED"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150" Height="30" CornerRadius="15" Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <TextBlock Text="Already have an account?" Foreground="DarkGray"
                               FontSize="12" FontWeight="Medium" FontFamily="Montserrat"
                               TextAlignment="Center" Margin="0,15,0,0"/>
                    <TextBlock Text="Log In"
                               Foreground="DarkGray"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="10,0,0,0"
                               Cursor="Hand"
                               TextDecorations="Underline"
                               HorizontalAlignment="Center"
                               MouseDown="LoginTextBlock_MouseDown"/>

                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
