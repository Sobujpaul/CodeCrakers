<Window x:Class="CodeCrakers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CodeCrakers" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="CanResize">

    <Grid>
        <!-- Background Image -->
        <Image Source="/Images/login10.png" Stretch="Fill"
               Opacity="1"/>

        <!-- Top bar -->
        <Grid VerticalAlignment="Top" Height="40" MouseDown="TitleBar_MouseDown">
            <Grid.Background>
                <SolidColorBrush Color="#22000000"/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left: App name -->
            <TextBlock Text="CodeCrakers" VerticalAlignment="Center" Margin="10,0,0,0"
                       Foreground="White" FontWeight="Bold"/>

            <!-- Right: window buttons -->
            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                <Button Click="Minimize_Click" Width="30" Height="20">
                    <Image Source="Images/Minimize.png"/>
                </Button>

                <Button Click="Maximize_Click" Width="30" Height="20" x:Name="MaxRestoreButton" Background="Transparent" BorderThickness="0">
                    <Image Source="Images/Maximize1png.png" x:Name="MaxRestoreImage"/>
                </Button>

                <Button Click="Close_Click" Width="30" Height="20" Background="Transparent" BorderThickness="0">
                    <Image Source="Images/Closed.png"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Welcome Text -->
        <TextBlock Text="Welcome to CodeCrakers" 
                   FontSize="50" FontWeight="Bold" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Foreground="White" x:Name="WelcomeText"/>

        <!-- Sign In button below top bar -->
        <Button Content="Sign In" Click="SignIn_Click" Background="DarkCyan"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="0,50,10,0" Width="80" Height="30"/>

        <!-- Frame to host pages like LoginPage -->
        <Frame x:Name="MainFrame"
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
               Margin="0,100,0,0"
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
